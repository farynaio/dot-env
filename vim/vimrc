function LintBuffer()
  if executable('jshint')
    if filereadable(glob('~/.jshintrc'))
      :call JSHintUpdate()
      execute '!jshint --config ~/.jshintrc'
    else
      :echo 'jshint config "~./.jshintrc" does not exists.'
    endif
  else
    :echo 'jshint is not installed.'
  endif
endfunction

